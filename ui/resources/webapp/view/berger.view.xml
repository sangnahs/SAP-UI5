<mvc:View controllerName="ui.controller.berger" displayBlock="true" id="bergerid" xmlns:html="http://www.w3.org/1999/xhtml" 
    xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form">
	<App>
		<pages>
            <Page id="mainpageid" title="Berger Paints" class="sapUiStdPage" showNavButton="true"
				  navButtonText="Back" navButtonPress="onPressDetailBack">
				<content>
				
		  <TileContainer
			id="container"
			 
			tiles="{path :'model2>/berger_paint'}">
			<StandardTile 
				icon="{model2>image}"
				title="{model2>paint_name}"
				press="onpress"/>
		</TileContainer>
				</content>
			</Page>

		</pages>
	</App>
</mvc:View>

